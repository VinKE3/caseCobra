generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Configuration {
  id              String        @id @default(cuid())
  width           Int
  height          Int
  imageUrl        String
  croppedImageUrl String?
  colorId     String    
  color       CaseColor     @relation(fields: [colorId], references: [id])
  modelId String 
  model PhoneModel @relation(fields: [modelId], references: [id])
  materialId String
  material CaseMaterial @relation(fields: [materialId], references: [id])
  finishId String
  finish CaseFinish @relation(fields: [finishId], references: [id])
}

model CaseColor {
  id              String        @id @default(cuid())
  name            String
  value           String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  configuration Configuration[]
}

model PhoneModel {
  id          String    @id @default(cuid())
  name        String
  imageId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  basePrice   Decimal
  configuration Configuration[]
}


model CaseMaterial {
  id              String        @id @default(cuid())
  name            String
  basePrice   Decimal
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  configuration Configuration[]
}

model CaseFinish {
  id              String        @id @default(cuid())
  name            String
  basePrice   Decimal
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  configuration Configuration[]
}

